# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# the management network (10.0.0.0/24)
auto br0
iface br0 inet static
    address 10.0.0.8<%= hostnum %>
    netmask 255.255.255.0
    network 10.0.0.0
    broadcast 10.0.0.255
    bridge_ports em1
    bridge_maxwait 0
    up ifconfig $IFACE promisc

# the old DMZ (192.168.1.0/24)
auto br1 
iface br1 inet static
    address 192.168.1.24<%= hostnum %>
    netmask 255.255.255.0
    network 192.168.1.0
    broadcast 192.168.1.255
    gateway 192.168.1.1
    mtu 9000
    bridge_ports p2p2.10
    bridge_maxwait 0
    up ifconfig $IFACE promisc

# the external network (10.0.2.0/24)
auto br2
iface br2 inet static
    address 10.0.2.8<%= hostnum %>
    netmask 255.255.255.0
    network 10.0.2.0
    broadcast 10.0.2.255
    mtu 9000
    bridge_ports p2p2.41
    bridge_maxwait 0
    up ifconfig $IFACE promisc

# the internal network (10.0.1.0/24)
auto br3
iface br3 inet static
    address 10.0.1.8<%= hostnum %>
    netmask 255.255.255.0
    network 10.0.1.0
    broadcast 10.0.1.255
    mtu 9000
    bridge_ports p2p1
    bridge_maxwait 0
    up ifconfig $IFACE promisc

