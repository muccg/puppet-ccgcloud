[DEFAULT]

memcached_servers = <%= @memcached_servers %>
osapi_compute_workers = <%= @osapi_compute_workers %>
metadata_workers = <%= @metadata_workers %>
ec2_workers = <%= @ec2_workers %>

# LOGS/STATE
verbose=True
log_dir=/var/log/nova
state_path=/var/lib/nova
lock_path=/var/lock/nova
rootwrap_config=/etc/nova/rootwrap.conf

# SCHEDULER
compute_scheduler_driver=nova.scheduler.filter_scheduler.FilterScheduler

# VOLUMES
# configured in cinder.conf
rbd_user = <%= rbd_user %>
rbd_secret_uuid = <%= rbd_secret_uuid %>

# COMPUTE
compute_driver=libvirt.LibvirtDriver
instance_name_template=instance-%08x
api_paste_config=/etc/nova/api-paste.ini

# COMPUTE/APIS: if you have separate configs for separate services
# this flag is required for both nova-api and nova-compute
allow_resize_to_same_host=True

# APIS
osapi_compute_extension=nova.api.openstack.compute.contrib.standard_extensions
ec2_dmz_host=<%= @ec2_dmz_host %>
s3_host=<%= @s3_host %>

# RABBITMQ
#rpc_backend = heat.openstack.common.rpc.impl_kombu
rabbit_port = 5672
# Use HA queues in RabbitMQ (x-ha-policy: all). If you change
# this option, you must wipe the RabbitMQ database. (boolean
# value)
#rabbit_ha_queues=false
rabbit_ha_queues=true
# RabbitMQ HA cluster host:port pairs. (list value)
rabbit_hosts=<%= @rabbit_hosts %>
# The RabbitMQ userid. (string value)
rabbit_userid=<%= @rabbit_userid %>
# The RabbitMQ password. (string value)
rabbit_password=<%= @rabbit_password %>
# The RabbitMQ virtual host. (string value)
rabbit_virtual_host=<%= @rabbit_virtual_host %>

# GLANCE
image_service=nova.image.glance.GlanceImageService

# NETWORK
network_manager=nova.network.manager.FlatDHCPManager
force_dhcp_release=True
share_dhcp_address=True
dhcpbridge_flagfile=/etc/nova/nova.conf
dhcpbridge=/usr/bin/nova-dhcpbridge
dnsmasq_config_file=/etc/nova/dnsmasq.conf
multi_host=True
allow_same_net_traffic=True
send_arp_for_ha=True
network_size=254

firewall_driver=nova.virt.libvirt.firewall.IptablesFirewallDriver
security_group_api=nova
# Change my_ip to match each host
my_ip=<%= @my_ip %>
# vlan_interface=eth0
flat_interface=<%= @flat_interface %>
public_interface=<%= @public_interface %>
dns_server=<%= @dns_server %>

# NOVNC CONSOLE
novncproxy_base_url=<%= @novncproxy_base_url %>
# Change vncserver_proxyclient_address and vncserver_listen to match each compute host
vncserver_proxyclient_address=<%= @vncserver_proxyclient_address %>
vncserver_listen=<%= @vncserver_listen %>

# AUTHENTICATION
auth_strategy=keystone
[keystone_authtoken]
identity_uri = <%= @keystone_identity_uri %>
auth_uri = <%= @keystone_auth_uri %>
admin_tenant_name = service
admin_user = <%= @keystone_admin_user %>
admin_password = <%= @keystone_admin_password %>
signing_dirname = /tmp/keystone-signing-nova

# GLANCE
[glance]
api_servers=<%= @glance_api_servers %>

# DATABASE
[database]
connection=<%= @database_connection %>

[conductor]
workers = <%= @conductor_workers %>

# LIBVIRT
[libvirt]
virt_type=qemu
images_type = rbd
images_rbd_pool = vms
images_rbd_ceph_conf = /etc/ceph/ceph.conf
rbd_user = <%= rbd_user %>
rbd_secret_uuid = <%= rbd_secret_uuid %>
inject_password = false
inject_key = false
inject_partition = -2
live_migration_flag="VIR_MIGRATE_UNDEFINE_SOURCE,VIR_MIGRATE_PEER2PEER,VIR_MIGRATE_LIVE,VIR_MIGRATE_PERSIST_DEST,VIR_MIGRATE_TUNNELLED"
hw_disk_discard = unmap

[workarounds]
# workaround particularly nasty nova / libvirt bug in Kilo
destroy_after_evacuate = False
